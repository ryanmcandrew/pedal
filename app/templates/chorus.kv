#:kivy 1.0

# rate_hz float
# depth float
# centre_delay_ms
# feedback
# mix

#: import ew kivy.uix.effectwidget

<ChorusWidget>:
    # BoxLayout:
         
    BoxLayout:
        Slider:
            id: rate_slider
            min: 0
            max: 100
            step: 1
            orientation: 'vertical'
            on_touch_move: root.update_chorus(rate_slider.value, depth_slider.value, centre_delay_slider.value, feedback_slider.value, mix_slider.value)
        Label:
            text: 'rate - ' + str(round(rate_slider.value, 1))
    BoxLayout:
        Slider:
            id: depth_slider
            min: 0.0
            max: 1.0
            step: 0.01
            orientation: 'vertical'
            on_touch_move: root.update_chorus(rate_slider.value, depth_slider.value, centre_delay_slider.value, feedback_slider.value, mix_slider.value)
        Label:
            text: 'depth - ' + str(round(depth_slider.value, 2))
    BoxLayout:
        Slider:
            id: centre_delay_slider
            min: 0.0
            max: 100.0
            step: 0.1
            orientation: 'vertical'
            on_touch_move: root.update_chorus(rate_slider.value, depth_slider.value, centre_delay_slider.value, feedback_slider.value, mix_slider.value)
        Label:
            text: 'centre_delay - ' + str(round(centre_delay_slider.value, 1))
    BoxLayout:
        Slider:
            id: feedback_slider
            min: 0
            max: 100
            step: 0.1
            orientation: 'vertical'
            on_touch_move: root.update_chorus(rate_slider.value, depth_slider.value, centre_delay_slider.value, feedback_slider.value, mix_slider.value)
        Label:
            text: 'feedback - ' + str(round(feedback_slider.value, 1))
    BoxLayout:
        Slider:
            id: mix_slider
            min: 0
            max: 1
            step: 0.1
            orientation: 'vertical'
            on_touch_move: root.update_chorus(rate_slider.value, depth_slider.value, centre_delay_slider.value, feedback_slider.value, mix_slider.value)
            
        Label:
            text: 'mix - ' + str(round(mix_slider.value, 1))


    BoxLayout:
        Button:
            text: 'play'
            on_press: root.play_wav()
            # on_press:root.test_one()
            # on_press:root.chorus()
        Button:
            id: stop_button
            text:'stop'
            on_press:root.stop_wav()
        Button:
            id: reload_button
            text:'reload'
            on_press:root.reload_wav()
        Slider:
            id: seek_input
            min: 0
            max: 100
            step: 1
            text:'seek'
            orientation: 'horizontal'
            on_touch_move: root.seek_wav(seek_input.value)
        Label:
            text: 'seek - ' + str(round(seek_input.value, 1))
