#:kivy 1.0

#: import ew kivy.uix.effectwidget

<ToolbarWidget>:
    
    BoxLayout:
        Button:
            text:'play'
            on_press:root.play_wav()
            # on_press:root.test_one()
            # on_press:root.chorus()
        Button:
            id: stop_button
            text:'stop'
            on_press:root.stop_wav()
        Button:
            id: record
            text:'record'
        Button:
            id: reload_button
            text:'reload'
            on_press:root.reload_wav()
        Slider:
            id: seek_input
            min: 0
            max: 100
            step: 1
            text:'seek'
            orientation: 'horizontal'
            on_touch_move: root.seek_wav(seek_input.value)
        Label:
            text: 'seek - ' + str(round(seek_input.value, 1))
    BoxLayout:
        # orientation:vertical
        Spinner:
            id: spinner_pick
            values: root.audio_devices()
            # values: ["test", "test2"]
            text: 'audio device'
            size: 300, 44
            size_hint: None, None
            on_text: print(self.text); root.update_active_audio_device(spinner_pick.text); 
            orientation: 'horizontal'