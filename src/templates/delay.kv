#:kivy 1.0

# delay_seconds, feedback, mix

<DelayLayout>:

    Label:
        text: 'Delay - '
        
    BoxLayout:
        Slider:
            id: delay_seconds_slider
            min: 0
            max: 1
            step: .01
            value: 0.5
            orientation: 'vertical'
            on_touch_move: root.update('delay_seconds', delay_seconds_slider.value)
        Label:
            text: 'delay_seconds - ' + str(round(delay_seconds_slider.value, 2))
    BoxLayout:
        
        Slider:
            id: feedback_slider
            min: 0.0
            max: 1.0
            step: 0.01
            value: 0.03
            orientation: 'vertical'
            on_touch_move: root.update('feedback', feedback_slider.value)
        Label:
            text: 'feedback - ' + str(round(feedback_slider.value, 2))

    BoxLayout:
        Slider:
            id: mix_slider
            min: 0
            max: 1
            step: .01
            value: 0.5
            orientation: 'vertical'
            on_touch_move: root.update('mix', mix_slider.value)
        Label:
            text: 'mix - ' + str(round(mix_slider.value, 1))
